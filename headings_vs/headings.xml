<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>headings</name>
	<author>Vanshita Singh</author>
	<creationDate>April 2022</creationDate>
	<authorEmail>singhvanshita898@gmail.com</authorEmail>
	<authorUrl>https://github.com/Vanshitasingh</authorUrl>
	<version>1.0.0</version>
	<description>A Headings plugin to replace all the headings on your site</description>
	<files>
		<filename plugin="headings">headings.php</filename>
	</files>
	<media folder="media" destination="plg_system_headings">
		<!--<folder>css</folder>-->
		<folder>js</folder>	
	</media>
	<languages>
		<language tag="en-GB">language/en-GB.plg_system_headings.ini</language>
	</languages>
	<config>
		<fields name="params">
          
			<fieldset name="basic">
				<field
					name="text_input"
					type="text"
					label="HEADINGS_TEXT_VS"
					default="Greetings!!"
				/>
				<field
					name="num_input"
					type="number"
					label="HEADINGS_NUMBER_VS"
					default="10"
				/>
              	<field
					name="option_input"
					type="radio"
					class="switcher"
					label="HEADINGS_OPTION_VSL"
					default="0"
                 >
					<option value="1">YES</option>
					<option value="0">NO</option>
             	</field>
			</fieldset>
          
		</fields>
	</config>
</extension>